pipeline {
    agent any

    stages {

        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }    
            }
            steps {
                sh '''
                    npm ci
                    npm run build
                '''
            }
        } 
        
        stage('Build Docker images') {
            steps {
                sh '''
                    docker build -f ci/Dockerfile-playwright -t my-playwright .
                    docker build -f ci/Dockerfile-aws-cli -t my-aws-cli .
                '''
            }
        }
    }
}